/* ------------------------------------------------------------
	Structure
------------------------------------------------------------ */
* {
	margin: 0;
	padding: 0;
}

html, body {
	height: 100%;
	margin: 0 0 1px 0;
	padding: 0;
}

body {
	font: 72.5% Verdana, Arial, sans-serif;
	color: #333;
	background: #fff;
}

#container {
	width: 700px;
	margin: 0 auto;
	padding: 60px 0 50px 0;
}

#site_and_page_title {
	border-bottom: 1px solid #ccc;
	padding-bottom: 18px;
	text-align: center;
}

#site_and_page_title h1 {
	color: #000;
	font: bold 44px Helvetica, Arial, sans-serif;
	margin-bottom: 30px;
}

#site_and_page_title h1 a,
#site_and_page_title h1 a:hover {
	color: #000;
	text-decoration: none;
}

#site_description p {
	color: #656565;
	font: italic 20px Tahoma, Georgia, Times New Roman, sans-serif;
	margin-bottom: 12px;
}

#site_map {
	padding: 20px 45px;
}

#site_footer {
	border-top: 1px solid #ccc;
	padding-top: 18px;
	text-align: center;
}

dt {
	color: #000;
	font: bold 18px Helvetica, Arial, sans-serif;
	margin-bottom: 12px;
	padding-bottom: 12px;
	border-bottom: 1px solid #eee;
}

dt a,
dt a:hover {
	color: #000;
	text-decoration: none;
}

dd {
	border-bottom: 3px double #ccc;
	margin-bottom: 15px;
	padding-bottom: 15px;
}

dl.l2_sections {
	border-left: 4px solid #eee;
	margin-top: 15px;
}

dt.l2_section_title {
	border-bottom: none;
	font-size: 14px;
	margin: 0 0 3px 20px;
	padding: 0 0 3px 0;
	line-height: 1.6;
}

dd.l2_pages {
	border-bottom: none;
	margin: 0 0 15px 20px;
	padding: 0 0 0 0;
}

ul {
	list-style: none;
}

li {
	font-size: 14px;
	line-height: 1.6;
}

/* ------------------------------------------------------------
	Links
------------------------------------------------------------ */
a {
	color: #36c;
	text-decoration: none;
}
	
a:hover {
	color: #933;
	text-decoration: underline;
}

/* Kill Dotted Lines in Firefox */
a:focus, a:active {
	outline: none;
}

/* ------------------------------------------------------------
	Common, Misc...
------------------------------------------------------------ */
.hidden, hr {
	display: none;
}

.clear {
	clear: both;
}